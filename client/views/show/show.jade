h3 Show Page

.row
  .col-xs-3
    form(novalidate, name='showForm', role='form')
      .form-group
        label(for='photo') Photo
        input.form-control#photo(name='photo', type='text', ng-model='show.photo', required)
      .form-group
        label(for='name') Name
        input.form-control#name(name='name', type='text', ng-model='show.name', required, autofocus)
      .form-group
        label(for='address') Address
        input.form-control#address(name='address', type='text', ng-model='show.address', required)
      .form-group
        label(for='birthday') Birthday
        input.form-control#birthday(name='birthday', type='text', ng-model='show.birthday', required)
      .form-group
        label(for='phone') Phone Number
        input.form-control#phone(name='phone', type='text', ng-model='show.phone', required)
      .form-group
        label(for='email') Email Address
        input.form-control#email(name='email', type='text', ng-model='show.email', required)
      .form-group
        label(for='facebook') Facebook
        input.form-control#facebook(name='facebook', type='text', ng-model='show.facebook', required)
      .form-group
        label(for='twitter') Twitter
        input.form-control#twitter(name='twitter', type='text', ng-model='show.twitter', required)
      .form-group
        button.btn.btn-success(ng-show='showForm.$valid', ng-click='updateContact()') Update Contact

  .col-xs-3.col-xs-offset-3

        table.table.table-bordered
          thead
            tr
              th Name
              th Address
              th Birthday
              th Phone Number
              th Email Address
              th Facebook
              th Twitter
          tbody
            tr
              td {{t.name}}
              td {{s.address}
              td {{s.birthday}}
              td {{s.number}}
              td {{s.email}}
              td {{s.facebook}}
              td {{s.twitter}}

