h3 Show Page

.row
  .col-xs-12
    form(novalidate, name='showForm', role='form', ng-show='showContact')
      .row
        .col-xs-3.col-xs-offset-3
          .form-group
            label(for='photo') Photo
            input.form-control#photo(name='photo', type='text', ng-model='contact.photo', required)
          .form-group
            label(for='name') Name
            input.form-control#name(name='name', type='text', ng-model='contact.name', required, autofocus)
          .form-group
            label(for='address') Address
            input.form-control#address(name='address', type='text', ng-model='contact.address', required)
          .form-group
            label(for='birthday') Birthday
            input.form-control#birthday(name='birthday', type='text', ng-model='contact.birthday', required)
        .col-xs-3
          .form-group
            label(for='phone') Phone Number
            input.form-control#phone(name='phone', type='text', ng-model='contact.phone', required)
          .form-group
            label(for='email') Email Address
            input.form-control#email(name='email', type='text', ng-model='contact.email', required)
          .form-group
            label(for='facebook') Facebook
            input.form-control#facebook(name='facebook', type='text', ng-model='contact.facebook', required)
          .form-group
            label(for='twitter') Twitter
            input.form-control#twitter(name='twitter', type='text', ng-model='contact.twitter', required)
          button.btn.btn-success(ng-click='updateContact()') Update Contact

.row
  .col-xs-12
    .panel.panel-default
      .panel-body
      .row
        .col-xs-12
          h1 {{contact.name}}
      .row
        .col-xs-4
            h4.fa.fa-map-marker &nbsp; address
        .col-xs-4
              a.thumbnail#profile(href='#', data-target='#uploadPhotos')
                img(src='# {photo}')
              h5.fa.fa-mobile &nbsp;  {{contact.phone}}
        .col-xs-4
          .row
            .col-xs-1
            .col-xs-6
              h2.fa.fa-envelope-o &nbsp; {{contact.email}}
          .row
            .col-xs-1
            .col-xs-6
              h5.fa.fa-birthday-cake &nbsp; {{contact.birthday}}
          .row
            .col-xs-1
            .col-xs-6
              h5.fa.fa-facebook &nbsp; {{contact.facebook}}
          .row
            .col-xs-1
            .col-xs-6
              h5.fa.fa-twitter &nbsp; {{contact.twitter}}

.row
  .col-xs-3.col-xs-offset-9
    button.btn.btn-success(ng-click='toggleContact()') Edit Contact
